    </thead>
    <tbody id="calendar-body" class="table-bordered text-center calendar__body">
    <%= render partial: 'calendars/calendar_body',
               locals: { calendar: calendar, reminders_by_week: reminders_by_week } %>
    </tbody>
  </table>
</div>